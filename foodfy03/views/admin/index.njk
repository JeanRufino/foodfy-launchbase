{% extends 'admin/layout.njk' %}

{% block title %}
    <title>Gerenciar</title>
{% endblock %}

{% block main %}

    <main id="main" class="main-admin">
        <div class="recipe-header">
            <h2>Gerenciar receitas</h2>
            <a href="/admin/create">Nova receita</a>
        </div>

        <div class="cards-most-viewed">

            {% for card in recipes %}
                <div class="card">
                    <span>
                        <img src="{{card.image}}" alt="{{card.title}}">
                    </span>
                    <div>
                        <h3>{{card.title}}</h3>
                        <p>{{card.author}}</p>
                        <a href="/admin/recipes/{{loop.index0}}">Visualizar</a>
                    </div>
                </div>
            {% endfor %}
            
        </div>

    </main>

{% endblock %}