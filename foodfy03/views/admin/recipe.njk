{% extends 'admin/layout.njk' %}

{% block main %}

    <main id="main-recipes" class="admin-main-recipes">
        <div class="recipe-header">
            <span>Receita: {{recipe.title}}</span>
            <a href="/admin/{{index}}/edit">Editar receita</a>
        </div>
        <div class="card recipe-card">
            <img src="{{recipe.image}}" alt="TBB">
            <h3>{{recipe.title}}</h3>
            <p>{{recipe.author}}</p>
        </div>

        <div class="recipe-info">
            <div>
                <h2>Ingredientes</h2>
                <a class="show-details">esconder</a>
                <ul class="details active">
                    {% for ingredient in recipe.ingredients %}
                        <li>{{ingredient}}</li>
                    {% endfor %}
                </ul>
            </div>      

            <div>
                <h2>Modo de preparo</h2>
                <a class="show-details">esconder</a>
                <ul class="details active">
                    {% for preparation in recipe.preparation %}
                        <li>{{preparation}}</li>
                    {% endfor %}
                </ul>
            </div>      

            <div>
                <h2>Informações adicionais</h2>
                <a class="show-details">esconder</a>
                <p class="details active">{{recipe.information}}</p>
            </div>
        </div>
    </main>

{% endblock %}