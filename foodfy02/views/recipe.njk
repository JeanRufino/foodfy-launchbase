{% extends 'layout.njk' %}

{% block main %}

    <main id="main-recipes">
        <div class="card recipe-card">
            <img src="{{card.image}}" alt="TBB">
            <h3>{{card.title}}</h3>
            <p>{{card.author}}</p>
        </div>

        <div class="recipe-info">
            <div>
                <h2>Ingredientes</h2>
                <a class="show-details">esconder</a>
                <ul class="details active">
                    {% for ingredient in card.ingredients %}
                        <li>{{ingredient}}</li>
                    {% endfor %}
                </ul>
            </div>      

            <div>
                <h2>Modo de preparo</h2>
                <a class="show-details">esconder</a>
                <ul class="details active">
                    {% for preparation in card.preparation %}
                        <li>{{preparation}}</li>
                    {% endfor %}
                </ul>
            </div>      

            <div>
                <h2>Informações adicionais</h2>
                <a class="show-details">esconder</a>
                <p class="details active">{{card.information}}</p>
            </div>
        </div>
    </main>

{% endblock %}